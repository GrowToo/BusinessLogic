<Window x:Class="WpfItemReceiver.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Product" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="ProductNameBox" PlaceholderText="Product Name" Margin="5" />
            <TextBox x:Name="ProductPriceBox" PlaceholderText="Product Price" Margin="5" />
            <Button Content="Save" Click="SaveButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
