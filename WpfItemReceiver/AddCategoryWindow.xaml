<Window x:Class="WpfItemReceiver.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Category" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="CategoryNameBox" PlaceholderText="Category Name" Margin="5" />
            <Button Content="Add" Click="AddButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
