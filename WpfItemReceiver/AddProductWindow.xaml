<Window x:Class="WpfItemReceiver.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="ProductNameBox" PlaceholderText="Product Name" Margin="5" />
            <TextBox x:Name="ProductPriceBox" PlaceholderText="Product Price" Margin="5" />
            <Button Content="Add" Click="AddButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
